<body style ="text-align:center">
<h1> Add an Album! </h1>

<ul>
  <% @album.errors.full_messages.each do |err_msg| %>
    <li> <%= err_msg %> </li>
  <% end  %>
</ul>
<br>
<form action="<%= albums_url %>" method= "POST">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label> Album Name </label>
  <input type="text"
    name="album[name]"
    id='album_name'>
  <br>
  <br>

  <label for="band_name">Select Band</label>
  <!-- dropdown -->
  <select name="album[band_id]" id="band_name">
    <!-- `brown`, if selected, is the value that will be submitted to
         the server; user is displayed "Brown" as the choice -->
    <% Band.all.each do |band| %>
      <option value= "<%= "#{band.id}" %>"> <%=band.name %></option>
    <% end  %>
  </select>
  <br>
  <br>

  <input type="radio" name="album[rec_type]" id="album_rec_live" value="Studio">
  <label for="album_rec_live">Live Recording</label>

  <input type="radio" name="album[rec_type]" id="album_rec_studio" value="Live">
  <label for="album_rec_studio">Studio Recording</label>
  <br>
  <br>
  <input type="submit" value="Add Album!">
</form>
</body>
